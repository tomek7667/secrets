meta {
  name: create secret
  type: http
  seq: 2
}

post {
  url: {{burl}}/api/secrets
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "key": "arn:example:aws:123456",
    "value": "Password123!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.key) {
    bru.setEnvVar("secret_key", res.body.data.key);
  }
}
