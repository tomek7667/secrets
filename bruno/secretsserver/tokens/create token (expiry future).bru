meta {
  name: create token (expiry future)
  type: http
  seq: 3
}

post {
  url: {{burl}}/api/tokens
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{token}}
}

body:json {
  {
    "token": "future",
    "expires_at": "2026-12-06T14:43:28.044Z"
  }
}

script:post-response {
  if (res.body.data && res.body.data.id) {
    bru.setEnvVar("soon_token_id", res.body.data.id);
  }
}
