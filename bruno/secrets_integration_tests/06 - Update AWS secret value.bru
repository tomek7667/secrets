meta {
  name: 06 - Update AWS secret value
  type: http
  seq: 6
}

put {
  url: {{burl}}/api/secrets?key={{aws_secret_key}}
  body: json
  auth: inherit
}

params:query {
  key: {{aws_secret_key}}
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "value": "UpdatedAWSSecretValue999!"
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
}

tests {
  test("Secret update should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    const decodedValue = Buffer.from(res.getBody().data.value, 'base64').toString('utf-8');
    expect(decodedValue).to.equal("UpdatedAWSSecretValue999!");
  });
}
