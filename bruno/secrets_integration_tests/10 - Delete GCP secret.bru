meta {
  name: 10 - Delete GCP secret
  type: http
  seq: 10
}

delete {
  url: {{burl}}/api/secrets?key={{gcp_secret_key}}
  body: none
  auth: inherit
}

params:query {
  key: {{gcp_secret_key}}
}

headers {
  Authorization: Bearer {{admin_token}}
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data: isNull
}

tests {
  test("Secret deletion should succeed", function() {
    expect(res.getStatus()).to.equal(200);
  });
}
