meta {
  name: 04 - Create Azure secret
  type: http
  seq: 4
}

post {
  url: {{burl}}/api/secrets
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "key": "https://myvault.vault.azure.net/secrets/mysecret",
    "value": "AzureSecretValue789!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.key) {
    bru.setEnvVar("azure_secret_key", res.body.data.key);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
}

tests {
  test("Azure secret creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
  });
}
