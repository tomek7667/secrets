meta {
  name: 03 - Create GCP secret
  type: http
  seq: 3
}

post {
  url: {{burl}}/api/secrets
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "key": "projects/my-project/secrets/my-gcp-secret",
    "value": "GCPSecretValue456!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.key) {
    bru.setEnvVar("gcp_secret_key", res.body.data.key);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
}

tests {
  test("GCP secret creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
  });
}
