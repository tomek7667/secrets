meta {
  name: 02 - Create AWS secret
  type: http
  seq: 2
}

post {
  url: {{burl}}/api/secrets
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "key": "arn:aws:secretsmanager:us-east-1:123456789012:secret:MySecret",
    "value": "SuperSecretValue123!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.key) {
    bru.setEnvVar("aws_secret_key", res.body.data.key);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.key: eq arn:aws:secretsmanager:us-east-1:123456789012:secret:MySecret
}

tests {
  test("AWS secret creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.key).to.contain("arn:aws");
  });
}
