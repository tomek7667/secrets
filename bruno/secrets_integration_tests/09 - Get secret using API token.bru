meta {
  name: 09 - Get secret using API token
  type: http
  seq: 9
}

get {
  url: {{burl}}/api/secrets/get?key={{aws_secret_key}}
  body: none
  auth: inherit
}

params:query {
  key: {{aws_secret_key}}
}

headers {
  Authorization: Api {{api_token}}
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.value: eq UpdatedAWSSecretValue999!
}

tests {
  test("Get secret with API token should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.value).to.equal("UpdatedAWSSecretValue999!");
  });
}
