meta {
  name: 07 - Create API token for secret access
  type: http
  seq: 7
}

post {
  url: {{burl}}/api/tokens
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "token": "API_TOKEN_AWS_ACCESS"
  }
}

script:post-response {
  if (res.body.data && res.body.data.id) {
    bru.setEnvVar("api_token_id", res.body.data.id);
    bru.setEnvVar("api_token", res.body.data.token);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
}

tests {
  test("API token creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
  });
}
