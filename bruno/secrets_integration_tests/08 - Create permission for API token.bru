meta {
  name: 08 - Create permission for API token
  type: http
  seq: 8
}

post {
  url: {{burl}}/api/permissions
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "token_id": "{{api_token_id}}",
    "secret_key_pattern": "arn:aws:*"
  }
}

script:post-response {
  if (res.body.data && res.body.data.id) {
    bru.setEnvVar("permission_id", res.body.data.id);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.secret_key_pattern: eq arn:aws:*
}

tests {
  test("Permission creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.secret_key_pattern).to.equal("arn:aws:*");
  });
}

