meta {
  name: 10 - Update future token expiry
  type: http
  seq: 10
}

put {
  url: {{burl}}/api/tokens/{{future_token_id}}
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "expires_at": "2027-12-31T23:59:59Z"
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.expires_at: eq 2027-12-31T23:59:59Z
}

tests {
  test("Token expiry update should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.expires_at).to.equal("2027-12-31T23:59:59Z");
  });
}
