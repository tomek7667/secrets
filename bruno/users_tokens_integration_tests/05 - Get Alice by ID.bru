meta {
  name: 05 - Get Alice by ID
  type: http
  seq: 5
}

get {
  url: {{burl}}/api/users/{{alice_id}}
  body: none
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.username: eq alice
}

tests {
  test("Should return Alice's details", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.username).to.equal("alice");
  });
}
