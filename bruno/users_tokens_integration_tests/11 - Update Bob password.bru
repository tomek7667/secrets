meta {
  name: 11 - Update Bob password
  type: http
  seq: 11
}

put {
  url: {{burl}}/api/users/{{bob_id}}
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "password": "NewBobPassword456!"
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.password: eq NewBobPassword456!
}

tests {
  test("Password update should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.password).to.equal("NewBobPassword456!");
  });
}
