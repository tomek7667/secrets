meta {
  name: 02 - Create user Alice
  type: http
  seq: 2
}

post {
  url: {{burl}}/api/users
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "username": "alice",
    "password": "AlicePassword123!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.id) {
    bru.setEnvVar("alice_id", res.body.data.id);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.username: eq alice
}

tests {
  test("User creation should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.username).to.equal("alice");
  });
}
