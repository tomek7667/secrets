meta {
  name: 03 - Login with new user credentials
  type: http
  seq: 3
}

post {
  url: {{burl}}/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": "testuser_auth",
    "password": "TestPassword123!"
  }
}

script:post-response {
  if (res.body.data && res.body.data.token) {
    bru.setEnvVar("user_token", res.body.data.token);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.token: isDefined
}

tests {
  test("New user login should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().success).to.equal(true);
    expect(res.getBody().data.token).to.be.a('string');
  });
}
