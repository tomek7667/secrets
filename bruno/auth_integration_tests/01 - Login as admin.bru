meta {
  name: 01 - Login as admin
  type: http
  seq: 1
}

post {
  url: {{burl}}/login
  body: json
  auth: inherit
}

headers {
  Content-Type: application/json
}

body:json {
  {
    "username": "admin",
    "password": "ZQECUE3G7P3CB4OIR3BUOSESQ3"
  }
}

script:post-response {
  if (res.body.data && res.body.data.token) {
    bru.setEnvVar("admin_token", res.body.data.token);
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.token: isDefined
}

tests {
  test("Admin login should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().success).to.equal(true);
    expect(res.getBody().data.token).to.be.a('string');
  });
}
