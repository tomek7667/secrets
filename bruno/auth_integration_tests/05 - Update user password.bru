meta {
  name: 05 - Update user password
  type: http
  seq: 5
}

put {
  url: {{burl}}/api/users/{{test_user_id}}
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{admin_token}}
  Content-Type: application/json
}

body:json {
  {
    "password": "NewPassword456!"
  }
}

script:post-response {
  if (res.body.success) {
    bru.setEnvVar("test_password", "NewPassword456!");
  }
}

assert {
  res.status: eq 200
  res.body.success: eq true
  res.body.data.password: eq NewPassword456!
}

tests {
  test("Password update should succeed", function() {
    expect(res.getStatus()).to.equal(200);
    expect(res.getBody().data.password).to.equal("NewPassword456!");
  });
}
